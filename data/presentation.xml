		<slide index="2" title="Definition of Thermoregulation" titleNormalized="definition of thermoregulation" src="slide3.swf" size="1859" advanceOnTime="0" framesCount="1" hasEmbeddedFlashClip="0" hidden="0" level="0" advanceOnClick="1" thumbnailAssetId="">
